{
    "manifest_version": 3,
    "name": "Notion Highlighter",
    "version": "1.0",
    "description": "Highlight text and send it to a Notion page.",
    "permissions": [
      "contextMenus",
      "activeTab",
      "storage"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    },
    "action": {
      "default_icon": {
        "16": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
      }
    },
    "host_permissions": [
      "https://api.notion.com/*"
    ]
  }
  